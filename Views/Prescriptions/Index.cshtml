@model IEnumerable<HOPITAL2.Models.Prescription>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
@{
    ViewData["Title"] = "Gestion des Prescriptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        :root {
            --primary-color: #2c7be5;
            --secondary-color: #6e84a3;
            --success-color: #00d97e;
            --danger-color: #e63757;
            --warning-color: #f6c343;
            --info-color: #39afd1;
            --background-color: #f9fbfd;
            --border-color: #e3ebf6;
            --card-shadow: 0 0.75rem 1.5rem rgba(18, 38, 63, 0.03);
        }

        .dossier-management-container {
            padding: 1.5rem;
            margin: 0 auto;
            background-color: var(--background-color);
            min-height: calc(100vh - 60px);
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #12263f;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .page-title i {
                color: var(--primary-color);
                font-size: 1.75rem;
            }

        .add-dossier-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem; /* Reduced padding to make it smaller */
            border-radius: 0.375rem;
            font-weight: 500;
            background-color: var(--primary-color);
            border: none;
            color: white;
            transition: all 0.2s ease;
            white-space: nowrap;
            text-decoration: none;
            font-size: 0.875rem; /* Smaller font size */
        }

            .add-dossier-btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(44, 123, 229, 0.2);
                color: white;
                text-decoration: none;
            }

        .dossier-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 0;
        }

            .dossier-table thead th {
                background-color: #f8f9fa;
                padding: 1rem;
                font-weight: 600;
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.08em;
                color: var(--secondary-color);
                border-bottom: 2px solid var(--border-color);
            }

            .dossier-table tbody td {
                padding: 1rem;
                vertical-align: middle;
                border-bottom: 1px solid var(--border-color);
                font-size: 0.875rem;
            }

        .btn-group {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            border: none;
            color: white;
            transition: all 0.2s ease;
        }

            .btn-action:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

        .btn-edit {
            background-color: var(--primary-color);
        }

            .btn-edit i {
                font-size: 1.25rem;
            }

        .btn-details {
            background-color: var(--info-color);
        }

            .btn-details i {
                font-size: 1.25rem;
            }

        .btn-delete {
            background-color: var(--danger-color);
        }

            .btn-delete i {
                font-size: 1.25rem;
            }
    </style>
}

<h1 class="page-title"><i class="fas fa-prescription-bottle-alt"></i> Gestion des Prescriptions</h1>

<p>
    <a asp-action="Create" class="add-dossier-btn">Créer un Nouveau</a>
</p>
<table class="table dossier-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posologie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicament)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posologie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consultation.ConsultationId)
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn-action btn-edit" asp-action="Edit" asp-route-id="@item.PrescriptionId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn-action btn-details" asp-action="Details" asp-route-id="@item.PrescriptionId">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a class="btn-action btn-delete" asp-action="Delete" asp-route-id="@item.PrescriptionId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
