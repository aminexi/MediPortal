@model IEnumerable<HOPITAL2.Models.Patient>

@{
    ViewData["Title"] = "Gestion des Patients";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MediPortal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1e40af;
            --secondary: #64748b;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --light: #f8fafc;
            --dark: #0f172a;
            --transition: all 0.3s ease;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }

        body {
            background: #f1f5f9;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            color: var(--dark);
            line-height: 1.6;
        }

        .page-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .header-section {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .page-title {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
            color: var(--dark);
        }

        .page-title i {
            font-size: 2rem;
            color: var(--primary);
            background: #dbeafe;
            padding: 1rem;
            border-radius: 1rem;
            transition: var(--transition);
        }

        .controls-section {
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 300px;
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            font-size: 0.95rem;
            transition: var(--transition);
            background: #f8fafc;
        }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--secondary);
            pointer-events: none;
        }

        .search-box input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            background: white;
        }

        .btn-new-patient {
            background: var(--primary);
            color: white;
            padding: 0.875rem 1.5rem;
            border-radius: 0.75rem;
            border: none;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
            transition: var(--transition);
            text-decoration: none;
            white-space: nowrap;
        }

        .btn-new-patient:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            color: white;
            box-shadow: var(--shadow-md);
        }

        .patients-table {
            background: white;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: var(--shadow);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .table {
            margin-bottom: 0;
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table th {
            background: #f8fafc;
            padding: 1rem 1.5rem;
            font-weight: 600;
            color: var(--secondary);
            border-bottom: 2px solid #e2e8f0;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
        }

        .table td {
            padding: 1rem 1.5rem;
            vertical-align: middle;
            border-bottom: 1px solid #e2e8f0;
            color: var(--dark);
            font-size: 0.875rem;
        }

        .table tbody tr {
            transition: var(--transition);
        }

        .table tbody tr:hover {
            background: #f8fafc;
        }

        .text-truncate {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            cursor: pointer;
        }

        .actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            border: none;
            transition: var(--transition);
            text-decoration: none;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            color: white;
        }

        .btn-edit { background: var(--primary); }
        .btn-details { background: var(--info); }
        .btn-delete { background: var(--danger); }

        .tooltip {
            position: absolute;
            background: rgba(15, 23, 42, 0.9);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            z-index: 1000;
            max-width: 300px;
            word-wrap: break-word;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.2s;
            box-shadow: var(--shadow-md);
        }

        @@media (max-width: 768px) {
            .page-container {
                padding: 1rem;
                margin: 1rem auto;
            }

            .header-section {
                padding: 1.5rem;
            }

            .controls-section {
                flex-direction: column;
            }

            .search-box {
                width: 100%;
            }

            .btn-new-patient {
                width: 100%;
                justify-content: center;
            }

            .table td, .table th {
                padding: 0.75rem 1rem;
            }
        }

        /* Animation classes */
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .slide-in {
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from { transform: translateX(-10px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="header-section slide-in">
            <h1 class="page-title">
                <i class="fas fa-hospital-user"></i>
                Gestion des Patients
            </h1>
            <div class="controls-section">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input 
                        type="text" 
                        id="searchInput" 
                        placeholder="Rechercher un patient..." 
                        aria-label="Rechercher un patient"
                    />
                </div>
                <a asp-action="Create" class="btn-new-patient">
                    <i class="fas fa-user-plus"></i>
                    Nouveau Patient
                </a>
            </div>
        </div>

        <div class="patients-table">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Adresse</th>
                            <th>Date de Naissance</th>
                            <th>Téléphone</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="patient-row fade-in">
                                <td class="text-truncate" data-full-text="@item.Nom">
                                    @item.Nom
                                </td>
                                <td class="text-truncate" data-full-text="@item.Prenom">
                                    @item.Prenom
                                </td>
                                <td class="text-truncate" data-full-text="@item.Adresse">
                                    @item.Adresse
                                </td>
                                <td>@item.DateNaissance.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                <td>@item.Telephone</td>
                                <td>
                                    <div class="actions">
                                        <a asp-action="Edit" asp-route-id="@item.PatientId" 
                                           class="btn-action btn-edit" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PatientId" 
                                           class="btn-action btn-details" title="Détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PatientId" 
                                           class="btn-action btn-delete" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced Search with Debouncing
            const searchInput = document.getElementById('searchInput');
            const rows = document.querySelectorAll('.patient-row');
            let searchTimeout;

            const debounce = (func, wait) => {
                return (...args) => {
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(() => func.apply(this, args), wait);
                };
            };

            const searchPatients = debounce((searchTerm) => {
                rows.forEach(row => {
                    const nom = row.children[0].textContent.toLowerCase();
                    const prenom = row.children[1].textContent.toLowerCase();
                    const adresse = row.children[2].textContent.toLowerCase();
                    const matches = nom.includes(searchTerm) || 
                                  prenom.includes(searchTerm) || 
                                  adresse.includes(searchTerm);
                    
                    if (matches) {
                        row.style.display = '';
                        row.classList.add('fade-in');
                    } else {
                        row.style.display = 'none';
                    }
                });
            }, 300);

            searchInput.addEventListener('input', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                searchPatients(searchTerm);
            });

            // Truncated text tooltip
            const truncatedElements = document.querySelectorAll('.text-truncate');
            let tooltip = null;

            function createTooltip(text, element) {
                if (tooltip) {
                    document.body.removeChild(tooltip);
                }

                tooltip = document.createElement('div');
                tooltip.className = 'tooltip';
                tooltip.textContent = text;
                document.body.appendChild(tooltip);

                const rect = element.getBoundingClientRect();
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                tooltip.style.top = `${rect.top + scrollTop - tooltip.offsetHeight - 10}px`;
                tooltip.style.left = `${rect.left + (rect.width - tooltip.offsetWidth) / 2}px`;
                tooltip.style.opacity = '1';
            }

            truncatedElements.forEach(element => {
                element.addEventListener('mouseenter', () => {
                    const fullText = element.getAttribute('data-full-text');
                    if (element.offsetWidth < element.scrollWidth) {
                        createTooltip(fullText, element);
                    }
                });

                element.addEventListener('mouseleave', () => {
                    if (tooltip) {
                        tooltip.style.opacity = '0';
                        setTimeout(() => {
                            if (tooltip && tooltip.parentNode) {
                                document.body.removeChild(tooltip);
                            }
                            tooltip = null;
                        }, 200);
                    }
                });
            });

            // Stagger animation for rows
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 50}ms`;
            });
        });
    </script>
</body>
</html>