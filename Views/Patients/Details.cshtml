@model HOPITAL2.Models.Patient

@{
    ViewData["Title"] = "Détails du Patient";
}

<h1 class="page-title">Détails du Patient</h1>

<div class="patient-details">
    <h4 class="section-title">Informations du Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>

        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>

        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.DateNaissance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateNaissance)
        </dd>

        <dt class="col-sm-2 detail-label">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone)
        </dd>
    </dl>
</div>

<div class="actions">
    <a asp-action="Edit" asp-route-id="@Model?.PatientId" class="btn btn-edit">Modifier</a> |
    <a asp-action="Index" class="btn btn-back">Retour à la Liste</a>
</div>

@section Styles {
    <style>
        .page-title {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 32px;
            font-weight: 600;
            color: #4b8bbe;
            text-align: center;
            margin-top: 30px;
        }

        .section-title {
            font-size: 24px;
            font-weight: 500;
            color: #333;
            margin-bottom: 20px;
        }

        .detail-label {
            font-weight: bold;
            color: #333;
        }

        .patient-details dl {
            margin-left: 0;
            margin-right: 0;
        }

        .actions {
            margin-top: 30px;
            text-align: center;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-edit {
            background-color: #007bff;
            color: white;
        }

        .btn-edit:hover {
            background-color: #0056b3;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
}

