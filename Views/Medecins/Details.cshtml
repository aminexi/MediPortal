@model HOPITAL2.Models.Medecin

@{
    ViewData["Title"] = "Détails du Médecin";
}

<h1 class="page-title">Détails du Médecin</h1>

<div class="details-medecin">
    <h4 class="section-title">Informations du Médecin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Prenom)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Specialite)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Specialite)
        </dd>
    </dl>
</div>

<div class="action-links">
    <a asp-action="Edit" asp-route-id="@Model?.MedecinId" class="btn btn-edit">Modifier</a> |
    <a asp-action="Index" class="btn btn-back">Retour à la Liste</a>
</div>

@section Styles {
    <style>
        .page-title {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 32px;
            font-weight: 600;
            color: #4b8bbe;
            text-align: center;
            margin-top: 30px;
        }

        .section-title {
            font-size: 24px;
            font-weight: 500;
            color: #333;
            margin-bottom: 20px;
        }

        .details-medecin .row {
            margin-bottom: 15px;
        }

        .details-medecin dt {
            font-weight: 600;
        }

        .details-medecin dd {
            font-size: 18px;
            color: #555;
        }

        .action-links {
            text-align: center;
            margin-top: 30px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            display: inline-block;
            margin: 5px;
        }

        .btn-edit {
            background-color: #007bff;
            color: white;
        }

        .btn-edit:hover {
            background-color: #0056b3;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
}
